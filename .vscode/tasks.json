{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DTEST_FILE_NAME=${fileBasenameNoExtension}",
                ".."
            ],
            "options": {
                "cwd": "${fileDirname}/build/"
            },
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "args": [
                "-j20"
            ],
            "options": {
                "cwd": "${fileDirname}/build/"
            },
            "dependsOn": [
                "Cmake"
            ]
        },
        {
            "label": "Build",
            "dependsOn": [
                "Make"
            ]
        },
    ],
}